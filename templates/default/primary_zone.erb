; This zone file is managed by Chef
$TTL <%= @default_ttl %>
<% if @soa %>

<%= "%-35s %-5s %-2s %-10s" % [
  '@',
  @soa.fetch(:ttl, ''),
  'IN',
  'SOA'
] %> <%= @soa[:mname] %> <%= @soa[:rname] %> (
                                         <%= @soa[:serial] %> ; Serial Number
                                         <%= @soa[:refresh] %> ; Refresh
                                         <%= @soa[:retry] %> ; Retry
                                         <%= @soa[:expire] %> ; Expire
                                         <%= @soa[:minimum] %> ; Minimum (NXDOMAIN Caching period)
                                )
<% end %>
<% unless @zone_records.empty? %>

<% @zone_records.each do |record| %>
<%= "%-35s %-5s %-2s %-10s %-s" % [
  '',
  record.fetch(:ttl, ''),
  record.fetch(:class, 'IN'),
  record[:type],
  record[:rdata]
]
%>
<% end %>
<% end %>
<% unless @records.empty? %>

<% @records.each do |record| %>
<%= "%-35s %-5s %-2s %-10s %-s" % [
  record[:owner],
  record.fetch(:ttl, ''),
  record.fetch(:class, 'IN'),
  record[:type],
  record[:rdata]
]
%>
<% end %>
<% end %>
